{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "src/"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "ts-node": {
    "esm": true
  }
}
